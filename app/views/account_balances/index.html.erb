<p id="notice"><%= notice %></p>

<h1>Listing Account Balances</h1>

<table>
  <thead>
    <tr>
      <th>Balance date</th>
      <th>Account</th>
      <th>Amount</th>
      <th>Buffer</th>
      <th>Debt</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_balances.each do |account_balance| %>
      <tr>
        <td><%= account_balance.balance_date %></td>
        <td><%= account_balance.account %></td>
        <td><%= account_balance.amount %></td>
        <td><%= account_balance.buffer %></td>
        <td><%= account_balance.debt %></td>
        <td><%= account_balance.paid %></td>
        <td><%= link_to 'Show', account_balance %></td>
        <td><%= link_to 'Edit', edit_account_balance_path(account_balance) %></td>
        <td><%= link_to 'Destroy', account_balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

