<p id="notice"><%= notice %></p>

<h1>Listing Account Balance Distributions</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Account</th>
      <th>Debt</th>
      <th>Recommendation</th>
      <th>Actual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_balance_distributions.each do |account_balance_distribution| %>
      <tr>
        <td><%= account_balance_distribution.account_balance.balance_date %></td>
        <td><%= account_balance_distribution.account_balance.account %></td>
        <td><%= account_balance_distribution.debt %></td>
        <td><%= account_balance_distribution.recommendation %></td>
        <td><%= account_balance_distribution.actual %></td>
        <td><%= link_to 'Show', account_balance_distribution %></td>
        <td><%= link_to 'Edit', edit_account_balance_distribution_path(account_balance_distribution) %></td>
        <td><%= link_to 'Destroy', account_balance_distribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

