<p id="notice"><%= notice %></p>

<h1>Listing Budgets</h1>

<% if @budgets.count > 0 %>
  <h2><%= @budgets.first.budget_month.strftime('%B %Y') %></h2>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <h3>Budget vs Spending By Month</h3>
    <%= line_chart budgets_by_month_budgets_path, discrete: true, library: {vAxis: {format: '$#,###.##'}} %>
  </div>
</div>

<%= form_tag reset_current_month_budgets_path, :method => 'get', :id => "budget_actions" do %>
  <table class="filters">
    <tr>
        <td><%= select_tag :choice, options_for_select([["Current Month", "current"], ["Next Month", "next"]]) %></td>
        <td><%= submit_tag "Reset", :data => {:confirm => 'Are you sure?'} %></td>
    </tr>
  </table>
<% end %>

<p>
  Expected Income: <%= number_to_currency(potential_income(@budgets.first.budget_month)) %><br>
  Total Budget: <%= number_to_currency(overall_budget(@budgets.first.budget_month)) %><br>
  Fixed Budget<sup><a href="#fn1" id="ref1"> 1</a></sup>: <%= number_to_currency(fixed_budget(@budgets.first.budget_month)) %><br>
  Variable Budget: <%= "#{number_to_currency(variable_budget(@budgets.first.budget_month))} of #{number_to_currency(potential_income(@budgets.first.budget_month)-fixed_budget(@budgets.first.budget_month))}" %><br>
  Debit Budget: <%= number_to_currency(debit_budget(@budgets.first.budget_month)) %><br>
  Credit Budget: <%= "#{number_to_currency(credit_budget(@budgets.first.budget_month))} of #{number_to_currency(potential_income(@budgets.first.budget_month)-debit_budget(@budgets.first.budget_month)
)}" %><br>
  Estimated CC Payments Budget<sup><a href="#fn2" id="ref2"> 2</a></sup>: <%= number_to_currency(credit_payment_budget(@budgets.first.budget_month)) %><br>
  <!-- Savings: <%= number_to_currency(savings_budget(@budgets.first.budget_month)) %><br>
  Loans: <%= number_to_currency(loans_budget(@budgets.first.budget_month)) %> -->
</p>

<%= will_paginate @budgets %>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Month</th>
      <th>Budget Amount</th>
      <th>Spendings</th>
      <th>+/-</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.category.name %></td>
        <td><%= budget.budget_month.strftime('%B %Y') %></td>
        <td><%= number_to_currency(budget.amount) %></td>
        <td><%= number_to_currency(budget.spendings.sum(:amount)) %></td>
        <td style="background-color:<%= good_pos_cell_color(budget.amount - budget.spendings.sum(:amount), budget.category.name)%>"><%= number_to_currency(budget.amount - budget.spendings.sum(:amount)) %></td>
        <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @budgets %>

<br>

<%= link_to 'New Budget', new_budget_path %>

<hr></hr>

<p>
<sup id="fn1">1. <%= fixed_budget_notes(@budgets.first.budget_month) %><a href="#ref1" title="Jump back to footnote 1 in the text.">↩</a></sup><br>
<sup id="fn2">2. <%= credit_payment_budget_notes(@budgets.first.budget_month) %><a href="#ref2" title="Jump back to footnote 2 in the text.">↩</a></sup><br>
</p>
