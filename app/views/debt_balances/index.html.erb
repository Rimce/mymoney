<p id="notice"><%= notice %></p>

<h1>Listing Debt Balances</h1>

<div class="row">
  <div class="col-xs-12">
    <h3>Credit Card Balances By Month</h3>
    <%= line_chart ccs_by_month_debt_balances_path, discrete: true, library: {vAxis: {format: '$#,###.##'}} %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h3>Loan Balances By Month</h3>
    <%= line_chart loans_by_month_debt_balances_path, discrete: true, library: {vAxis: {format: '$#,###.##'}} %>
  </div>
</div>

<%= will_paginate @debt_balances %>

<table>
  <thead>
    <tr>
      <th>Debt</th>
      <th>Due date</th>
      <th>Balance</th>
      <th>Paid</th>
      <th>+/-</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @debt_balances.each do |debt_balance| %>
      <tr>
        <td><%= debt_balance.debt.name %></td>
        <td><%= debt_balance.due_date %></td>
        <td><%= number_to_currency(debt_balance.balance) %></td>
        <td><%= number_to_currency(debt_balance.payments.sum(:amount)) %></td>
        <td style="background-color:<%= good_neg_cell_color(debt_balance.balance - debt_balance.payments.sum(:amount), debt_balance.debt.name)%>"><%= number_to_currency(debt_balance.balance - debt_balance.payments.sum(:amount)) %></td>
        <td><%= link_to 'Show', debt_balance %></td>
        <td><%= link_to 'Edit', edit_debt_balance_path(debt_balance) %></td>
        <td><%= link_to 'Destroy', debt_balance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @debt_balances %>

<br>

<%= link_to 'New Debt balance', new_debt_balance_path %>
